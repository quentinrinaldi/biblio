{% extends 'base.html.twig' %}

{% block body %}

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-3">
                <h1 class="my-4">Shop Name</h1>
                <div class="list-group">
                    <a href="{{ path('account_edit') }}" class="list-group-item active">Profile</a>
                    <a href="{{ path('account_borrowing') }}" class="list-group-item">My borrowings</a>
                    <a href="#" class="list-group-item">My penalties</a>
                </div>
            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-8 offset-lg-1 text-center center">
                <h2>Edit your information</h2>
                <hr>
                <div class="row">
                    <div class="col-10 offset-2">
                        {{ form_start(form) }}

                        {% if not form.vars.valid %}
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    {# Loop through every form item #}
                                    {% for child in form.children %}
                                        {# Display the errors of the form item #}
                                        {%for error in child.vars.errors%}
                                            <li>{{error.message}}</li>
                                        {%endfor%}
                                    {%endfor%}
                                </ul>
                            </div>
                        {% endif %}
                        <div class="form-group row">
                            {{ form_label(form.username, 'Username', {'label_attr': {'class': 'col-form-label col-3'}}) }}
                            <div class="col-5 offset-1">
                                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(form.firstName, 'First name', {'label_attr': {'class': 'col-form-label col-3'}}) }}
                            <div class="col-5 offset-1">
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(form.lastName, 'Last name', {'label_attr': {'class': 'col-form-label col-3'}}) }}
                            <div class="col-5 offset-1">
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-form-label col-3'}}) }}
                            <div class="col-5 offset-1">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(form.address, 'Address', {'label_attr': {'class': 'col-form-label col-3'}}) }}
                            <div class="col-5 offset-1">
                                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(form.phoneNumber, 'Phone number', {'label_attr': {'class': 'col-form-label col-3'}}) }}
                            <div class="col-5 offset-1">
                                {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Edit" />
                        {{ form_rest(form) }}
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}