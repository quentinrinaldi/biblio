{% extends 'admin_base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>PublishedDate</th>
                <td>{{ book.publishedDate ? book.publishedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ThumbnailUrl</th>
                <td>{{ book.thumbnailUrl }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Stars</th>
                <td>{{ book.stars }}</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>{{ book.publisher }}</td>
            </tr>
            <tr>
                <th>AvailableSince</th>
                <td>{{ book.availableSince ? book.availableSince|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsPinned</th>
                <td>{{ book.isPinned ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ book.availability ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ book.isbn }}</td>
            </tr>
            <tr>
                <th>PagesCount</th>
                <td>{{ book.pagesCount }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>{% for index,category in book.categories %}
                        {{ category.name }}{% if loop.index != loop.last %},{% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_book_index') }}">back to list</a>

    <a href="{{ path('admin_book_edit', {'id': book.id}) }}">edit</a>

    {{ include('backEnd/book/_delete_form.html.twig') }}
{% endblock %}
