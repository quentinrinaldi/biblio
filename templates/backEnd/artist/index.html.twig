{% extends 'admin_base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Books data</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>LastName</th>
                        <th>FirstName</th>
                        <th>Presentation</th>
                        <th>BirthDate</th>
                        <th>DeathDate</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for artist in artists %}
                        <tr>
                            <td>{{ artist.id }}</td>
                            <td>{{ artist.lastName }}</td>
                            <td>{{ artist.firstName }}</td>
                            <td>{{ artist.presentation }}</td>
                            <td>{{ artist.birthDate ? artist.birthDate|date('Y-m-d') : '' }}</td>
                            <td>{{ artist.deathDate ? artist.deathDate|date('Y-m-d') : '' }}</td>
                            <td>
                                <a href="{{ path('admin_artist_show', {'id': artist.id}) }}">show</a>
                                <a href="{{ path('admin_artist_edit', {'id': artist.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('admin_artist_new') }}">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable();
        });
    </script>
{% endblock %}