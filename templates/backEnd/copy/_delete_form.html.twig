<form method="post" action="{{ path('admin_copy_delete', {'id': copy.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ copy.id) }}">
    <button class="btn">Delete</button>
</form>
